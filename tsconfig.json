{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom"],
    "paths": {
      "angular-walkthrough": ["dist/angular-walkthrough"],
      "angular-walkthrough/*": ["dist/angular-walkthrough/*"]
    },
    "useDefineForClassFields": false
  }
}
